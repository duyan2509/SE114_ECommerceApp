<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/category_image"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="25dp"
        android:scaleType="centerCrop"
        android:src="@drawable/category_clothes" />

    <TextView
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/category_image"
        android:layout_alignTop="@+id/category_image"
        android:layout_alignEnd="@+id/category_image"
        android:layout_alignBottom="@+id/category_image"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="82dp"
        android:text="Category Name"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/category_image"
        android:layout_alignTop="@+id/category_image"
        android:layout_marginStart="19dp"
        android:layout_marginTop="77dp"
        android:layout_marginBottom="246dp"
        android:text="200 products"
        android:textSize="19dp" />
</RelativeLayout>